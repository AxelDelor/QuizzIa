<h1 class="text-center my-4 fw-bold title-custom">My Profile</h1>

<div class="d-flex justify-content-center">
  <ul class="list-group w-50">
    <% @quizzes.each do |quiz| %>
      <% score = quiz.questions.pluck(:question_score).sum / quiz.questions.count %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to quiz.theme, quiz_results_path(quiz), class: "title-custom text-decoration-none fw-bold" %>
        <span class="badge bg-light text-dark rounded-pill border"><%= score %> %</span>
      </li>
    <% end %>
  </ul>
</div>
