<div
  class="
    container-fluid vh-100 d-flex flex-column justify-content-center
    align-items-center custom-bg border border-3 border-primary
    position-relative
  "
>
  <div class="text-center mb-5">
    <div class="mb-4">
      <%= image_tag "image1.png", alt: "Logo du quizz", class: "img-fluid rounded-circle shadow-lg p-4", style: "max-width: 320px; background-color: #feaf2e;" %>
    </div>

    <%= link_to "Play", "#", class: "btn btn-custom btn-lg px-5 py-8 mt-4 shadow " %>
  </div>
</div>

<style>
  /* Fond dégradé avec la palette */
  .custom-bg {
    background: linear-gradient(135deg, #003244 0%, #2b7a8d 25%, #a4c9d8 50%, #d4dce6 75%, #f5f5f0 100%);
    border-color: #2b7a8d !important;
  }

  /* Bouton Play personnalisé */
  .btn-custom {
    background-color: #fd535f;
    color: black;
    font-size: 3rem;
    font-weight: bold;
    border: 3px solid #2b7a8d;
    min-width: 300px;
  }

  .btn-custom:hover {
    background-color: #2b7a8d;
    color: #f5f5f0;
    border-color: #003244;
    transform: translateY(-2px);
  }

  /* Coins de bordure */
  .container-fluid::before,
  .container-fluid::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #f5f5f0;
    border: 3px solid #2b7a8d;
  }

  .container-fluid::before {
    top: -3px;
    left: -3px;
  }

  .container-fluid::after {
    top: -3px;
    right: -3px;
  }
</style>
